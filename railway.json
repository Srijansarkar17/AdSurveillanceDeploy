{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd AdSurveillance && python -m gunicorn 'main:app' --bind 0.0.0.0:$PORT --workers=2 --threads=4 --worker-class=gthread",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE"
  }
}